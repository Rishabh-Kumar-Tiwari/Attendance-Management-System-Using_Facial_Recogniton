<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarTitleBold" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Toolbar.Title.Small" parent="Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.App.Button.Delete" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/red_400</item>
    </style>

</resources>
